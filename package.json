{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal Portfolio Website so we can make our debut into the field of front-end web development",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "devserver": "live-server",
    "start": "npm-run-all --parallel watch:sass devserver",
    "build:sass": "node-sass sass/main.scss css/style.css -o",
    "watch:sass": "npm run build:sass && npm run build:sass -- -w",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css -o",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Nathaniel MacIver",
  "license": "ISC"
}
